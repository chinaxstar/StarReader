<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textBlack"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="铁血中华"
        />

    <TextView
        android:id="@+id/book_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/book_title"
        tools:text="/data/data/0/hello.txt"/>

    <TextView
        android:id="@+id/open_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBaseline_creator="@id/book_path"
        app:layout_constraintBaseline_toBaselineOf="@id/book_path"
        app:layout_constraintLeft_toRightOf="@id/book_path"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="2017年8月12日17时23分"
        />
</android.support.constraint.ConstraintLayout>